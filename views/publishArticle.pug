doctype html
html
  head
    meta(charset='utf-8')
    title=title
    meta(name='yiyuan', content='webkit')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    style
      include ../js-css/css/nav.css
      include ../js-css/layui/css/layui.css

    style.
      fieldset{ width:500px;  font-size:18px; margin:10px auto; }
      fieldset form{ text-align:center;}
      fieldset input{ width:300px; height:30px; }
      fieldset select{ width:304px; height:34px; font-size:18px; cursor:pointer; }
      fieldset textarea{ width:300px; height:200px; font-size:18px; }
      fieldset div{ padding:10px 0px}
      fieldset .btn input{width:100px; height:30px; cursor:pointer; }

    include nav-title.pug
    div(id="con")

    fieldset(class="layui-elem-field layui-field-title")
      legend 发表文章
      form(action='/user/addArticlePage', method="post" class="layui-form layui-form-pane")
        div(class="layui-form-item")
          label 文章标题
            input(type='text', name='title', autocomplete='off', placeholder='请输入标题')
        div(class="layui-form-item")
          label 关键词语
            input(type='text', name='keyword', placeholder='请输入', autocomplete='off')
        div(class="layui-form-item")
          label 文章类型
            select(name='type')
              option(value='') 
              option(value='前端', selected='') 前端
              option(value='React') React
              option(value='Angular') Angular 
              option(value='Vue') Vue
              option(value='后端') 后端
        div(class="layui-form-item")
          label 
            span 文章内容
            textarea(placeholder='请输入内容', name="content" class="layui-textarea")
        div(class="btn layui-form-item")
          <input type="submit" value="立即提交"  class="layui-btn" lay-submit="" lay-filter="demo1">
          <input type="reset" value="重置"  class="layui-btn layui-btn-primary">
  script(src="/layui/layui.js")
  script    
    include ../js-css/js/nav-title.js