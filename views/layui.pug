doctype html
html
  head
    meta(charset='utf-8')
    title 44js
    meta(name='yiyuan', content='webkit')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    style.
      fieldset.layui-elem-field{ width:500px;  font-size:18px; margin:10px auto; }
      fieldset form.layui-form{ display:inline-block; width:500px; margin:10px auto; }

    style
      include ../js-css/css/nav.css
      include ../js-css/layui/css/layui.css
  body
    include nav-title.pug
    div(id="con")
    fieldset.layui-elem-field.layui-field-title
        legend 发表文章
        form.layui-form.layui-form-pane(action='/user/addArticlePage', method="post")
            .layui-form-item
                label.layui-form-label 文章标题
                .layui-input-block
                    input.layui-input(type='text', name='title', autocomplete='off', placeholder='请输入标题', lay-verify='required')
            .layui-form-item
                label.layui-form-label 关键字
                .layui-input-inline
                    input.layui-input(type='text', name='keyword', lay-verify='required', placeholder='请输入', autocomplete='off')
            .layui-form-item
                label.layui-form-label 文章类型
                .layui-input-block
                    select(name='interest', lay-filter='aihao')
                        option(value='')
                        option(value='0', selected='') 前端
                        option(value='1') React
                        option(value='2') Angular 
                        option(value='3') Vue
                        option(value='4') 后端
            .layui-form-item.layui-form-text
                label.layui-form-label 文章内容
                .layui-input-block
                    textarea.layui-textarea(placeholder='请输入内容', name="content")
            .layui-form-item
                .layui-input-block
                    button.layui-btn(lay-submit='', lay-filter='demo1') 立即提交
                    button.layui-btn.layui-btn-primary(type='reset') 重置

    script(src="/layui/layui.js")
    script    
        include ../js-css/js/nav-title.js
    script.
        layui.use(['form', 'layedit', 'laydate'], function(){
            var form = layui.form
                ,layer = layui.layer
                ,layedit = layui.layedit
                ,laydate = layui.laydate;
            //日期
            laydate.render({
                elem: '#date'
            });
            laydate.render({
                elem: '#date1'
            });
            //创建一个编辑器
            var editIndex = layedit.build('LAY_demo_editor');
            //自定义验证规则
            form.verify({
                title: function(value){
                    if(value.length < 5){
                        return '标题至少得5个字符啊';
                    }
                }
                //- ,pass: [/(.+){6,12}$/, '密码必须6到12位']
                ,content: function(value){
                    layedit.sync(editIndex);
                }
            });
            //监听指定开关
            form.on('switch(switchTest)', function(data){
                layer.msg('开关checked：'+ (this.checked ? 'true' : 'false'), {
                    offset: '6px'
                });
                layer.tips('温馨提示：请注意开关状态的文字可以随意定义，而不仅仅是ON|OFF', data.othis)
            });
            //监听提交
            form.on('submit(demo1)', function(data){
                layer.alert(JSON.stringify(data.field), {
                    title: '文章信息如下：'
                })
                return false;
            });
            //表单初始赋值
            form.val('example', {
                "username": "贤心" // "name": "value",
                //- ,"password": "123456"
                ,"interest": 1
                //- ,"like[write]": true //复选框选中状态
                //- ,"close": true //开关状态
                //- ,"sex": "女"
                //- ,"desc": "我爱 layui"
            })
        });
